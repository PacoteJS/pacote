{
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": ["packages/*"],
  "publish": {
    "ignoreChanges": ["test/**", "*.spec.ts", "*.test.ts", "*.md"]
  },
  "command": {
    "version": {
      "conventionalCommits": true,
      "message": "chore(release): publish %s"
    }
  }
}
