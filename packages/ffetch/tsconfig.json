{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./lib",
    "declaration": true,
    "target": "es5",
    "lib": ["dom", "es6", "es2015", "es2016", "es2017", "scripthost"],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "allowJs": false,
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*"]
}
