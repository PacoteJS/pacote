{
  "name": "pacote",
  "description": "Monorepo for the @pacote organisation.",
  "main": "index.js",
  "repository": "https://github.com/PacoteJS/pacote",
  "bugs": {
    "url": "https://github.com/PacoteJS/pacote/issues"
  },
  "author": "Luis Rodrigues",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "workspace-sources": {
    "*": [
      "packages/*/src"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "testURL": "http://localhost",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "tsc -b packages/*",
    "lint": "tslint --project tsconfig.tslint.json 'packages/*/{src,test}/**/*.{ts,tsx}' -t verbose",
    "format": "prettier --write 'packages/*/{src,test}/**/*.{js,jsx,ts,tsx,json,css,md}'",
    "pretest": "yarn lint",
    "test": "jest",
    "test:coverage": "yarn test --coverage",
    "clean": "rimraf packages/*/lib",
    "prepublish": "yarn build && yarn test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "**/*.{js,json,css,md}": [
        "prettier --write",
        "git add"
      ],
      "**/*.{ts,tsx}": [
        "prettier --write",
        "tslint --project tsconfig.tslint.json",
        "git add"
      ]
    }
  },
  "devDependencies": {
    "@types/jest": "^24.0.0",
    "@types/nock": "^9.3.0",
    "@types/node": "^11.9.0",
    "fast-check": "^1.7.1",
    "fp-ts": "^1.10.0",
    "husky": "^1.0.1",
    "jest": "^24.1.0",
    "lerna": "^3.4.0",
    "lint-staged": "^8.0.4",
    "nock": "^10.0.0",
    "prettier": "^1.14.3",
    "rimraf": "^2.6.2",
    "ts-jest": "23.1.4",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.3.1",
    "typescript-workspace-plugin": "^2.0.1"
  }
}
