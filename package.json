{
  "name": "pacote",
  "description": "Monorepo for the @pacote organisation.",
  "main": "index.js",
  "repository": "https://github.com/PacoteJS/pacote",
  "bugs": {
    "url": "https://github.com/PacoteJS/pacote/issues"
  },
  "author": "Luis Rodrigues",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "workspace-sources": {
    "*": [
      "packages/*/src"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "testURL": "http://localhost",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "tsc -b packages/*",
    "lint": "eslint 'packages/*/{src,test}/**/*.{ts,tsx}'",
    "format": "prettier --write 'packages/*/{src,test}/**/*.{js,jsx,ts,tsx,json,css,md}'",
    "pretest": "yarn lint",
    "test": "jest",
    "test:coverage": "yarn test --coverage",
    "clean": "rimraf packages/*/lib",
    "prepublish": "yarn build && yarn test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ],
    "**/*.{ts,tsx}": [
      "prettier --write",
      "eslint",
      "git add"
    ]
  },
  "devDependencies": {
    "@testing-library/react": "^8.0.1",
    "@types/jest": "^24.0.0",
    "@types/nock": "^10.0.1",
    "@types/node": "^12.0.0",
    "@types/ramda": "^0.26.14",
    "@typescript-eslint/eslint-plugin": "^1.11.0",
    "@typescript-eslint/parser": "^1.11.0",
    "eslint": "^6.0.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.14.2",
    "eslint-plugin-standard": "^4.0.0",
    "fast-check": "^1.7.1",
    "fp-ts": "^2.0.0",
    "husky": "^3.0.0",
    "jest": "^24.1.0",
    "lerna": "^3.4.0",
    "lint-staged": "^9.0.0",
    "nock": "^10.0.0",
    "prettier": "^1.14.3",
    "react": "^16.8.1",
    "react-dom": "^16.8.1",
    "rimraf": "^2.6.2",
    "ts-jest": "23.1.4",
    "typescript": "^3.3.1",
    "typescript-workspace-plugin": "^2.0.1"
  }
}
